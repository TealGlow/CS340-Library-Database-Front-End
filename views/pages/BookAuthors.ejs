<%- include ("../partials/header") %>

  <div class="myContainer center element-col">
    <%if(error!=""){%>
      <div class="not-avail"><%=error%></div>
    <%}%>

    <!-- form to add data -->
    <form class="addData" onSubmit="addAndValidateFormBookAuthors()">
      <label for="author_id">author_id:</label>
      <input type="number" name="author_id" class="form-control">

      <label for="book_id">book_id:</label>
      <input type="number" name="book_id" class="form-control">

      <button value="/CheckedOutBooks" class="btn btn-dark" type="Submit">Add</button>

            <br/>
            <br/>

      <div class="not-avail" id="data-add-error"></div>
    </form>

    <!-- form to show data in table-->
    <table>
      <tr>
        <th><u>author_id</u></th>
        <th>book_id</th>

        <th>Modify</th>
        <th>Delete</th>
      </tr>
      <% for(var i = 0; i<data.length; i++){%>

        <tr>
          <form class="row-data" id="row-data-<%=i%>" value="<%=i%>" onsubmit="validateFormBookAuthors(<%=i%>)">
            <td><input type="number" name="author_id" placeholder="<%=data[i].author_id%>"></td>
            <td><input type="number" name="book_id" placeholder="<%=data[i].book_id%>"> </td>

            <td><button class="btn btn-dark" name="modify" value="<%=data[i].author_id%>" type = "submit" class="btn btn-dark">Modify</button></td>
          </form>
          <td><form onsubmit="bookAuthorsTableRemoval(<%= data[i].author_id %>)"><button value ="<%= data[i].author_id %>" type ="submit"  class="btn btn-dark">Delete</button></form></td>
        </tr>

      <%}%>

    </table>

  </div>

<%- include ("../partials/footer") %>
