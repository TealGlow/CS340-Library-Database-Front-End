<%- include ("../partials/header") %>

<!--
  page that shows all the publishers contained in the library and
  how many books they have published

  Ideally we would allow the user to search based on publisher
-->

<div class="myContainer element-col center">
  <div class="main-container">

    <% if(data !=""){%>

      <% for(var i=0; i < data.length; i++){%>

        <div class="single-item" id=<% data[i].publisher_id %> >
            <h1><strong><%= data[i].company_name %></strong></h1>
            <form method="POST" action="/search">
                <input class="hidden" name="search_by" id="search" value ="publishers">
                <input class="hidden" name="userInput" id="userInput" value ="<%= data[i].company_name %>">
                <button type="Submit" class="btn btn-dark"> See books published by <%= data[i].company_name %> </button>
            </form>
        </div>
        <br/>

      <%}%>

    <%}%>

  </div>
</div>

<%- include ("../partials/footer") %>
